<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="/css/bootstrap.min.css" type="text/css">
        <link rel="stylesheet" href="/css/bootstrap-theme.min.css" type="text/css">
        <link rel="stylesheet" href="/css/styles.css" type="text/css">
        <meta charset="utf-8">
        <title>Jazztown Shoe Site</title>
    </head>
    <body>
        <div class="container">
            <h1><a href ="/">Jazztown Shoe Conglomerate</a></h1>
            <h2>Brand: {{brand.getName}}</h2>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                <h3>{{brand.getName}}'s are available in these groovy stores:</h3>
                {% if stores is not empty %}
                    <ul>
                    {% for store in stores%}
                        <li> {{store.getName}}</li>
                    {% endfor %}
                </ul>
                {% endif %}

                </div>
                <div class="col-md-6">
                    <h3> Update this Brand</h3>
                    <form  action="/update_brand/{{brand.getId}}" method="post">
                        <input type="hidden" name="_method" value="patch">

                        <label for="brand_name">New Brand Name</label>
                        <input type="text" name="brand_name" value="">

                        <button type="submit" class="btn btn-info" name="button">Rebrand</button>
                    </form>

                    {% if all_stores is not empty %}
                        <h3> or add a current Store to sell in</h3>
                                <form  action="/brand_in_store/{{brand.getId}}" method="post">

                                    <select name="exist_store" class="form-control author">
                                        {% for store in all_stores %}
                                            <option value='{{store.getId}}'> {{store.getName}}</option>
                                        {% endfor %}
                                    </select>
                                    <button type="submit" class="btn btn-info">Add to a Store</button>
                                </form>
                    {% endif %}
                </div>
            </div>
        </div>


    </body>
</html>
